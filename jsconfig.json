{
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES6",
      "checkJs": false,
      "baseUrl": "src",
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "paths": {
            "@commands/*": ["commands/*"],
            "@context/*": ["commands/_context*"],
            "@slash/*": ["commands/_slash/*"],
            "@events/*": ["events/*"],
            "@handler/*": ["events/_handler/*"],
            "@models/*": ["events/_models/*"],
            "@utils/*": ["events/_utils/*"]
        },
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }